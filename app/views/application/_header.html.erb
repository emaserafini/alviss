<nav class="navbar is-transparent">
  <div class="navbar-brand">
    <%= link_to root_path, class: 'navbar-item' do %>
      <img src="https://bulma.io/images/bulma-logo.png" alt="Bulma: a modern CSS framework based on Flexbox" width="112" height="28">
    <% end %>
    <div class="navbar-burger burger" data-target="navbarMainMenu">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="navbarMainMenu" class="navbar-menu">
    <div class="navbar-start">
      <%= link_to 'Home', root_path, class: 'navbar-item' %>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">
        <% if signed_in? -%>
          <div class="field">
            <p class="control">
              <%= link_to sign_out_path, class: 'button', method: :delete do -%>
                <%= content_tag(:span, content_tag(:i, nil, class: 'fas fa-sign-out-alt'), class: 'icon') %>
                <%= content_tag(:span, t('layouts.application.sign_out')) %>
              <% end -%>
            </p>
          </div>
        <% else -%>
          <div class="field">
            <p class="control">
              <%= link_to sign_in_path, class: 'button' do -%>
                <%= content_tag(:span, content_tag(:i, nil, class: 'fas fa-sign-in-alt'), class: 'icon') %>
                <%= content_tag(:span, t('layouts.application.sign_in')) %>
              <% end -%>
            </p>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
</nav>